<Window x:Class="OpenFin.WPF.SnapshotSourceClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenFin.WPF.SnapshotSourceClient"
        mc:Ignorable="d"
        Title="WPF Snapshot Source Client" Height="70" Width="350" Icon="/favicon.ico">
    <DockPanel>
        <UniformGrid  Columns="3">
            <Button Click="PlatformLaunch_Click">Launch Platform</Button>
            <Button Click="GetSnapshot_Click">Get Snapshot</Button>
            <Button Click="ApplySnapshot_Click">Apply Snapshot</Button>
        </UniformGrid>
    </DockPanel>
</Window>

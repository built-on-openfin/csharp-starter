<Window x:Class="SimpleConnect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Border HorizontalAlignment="Stretch" Background="Red">
            <Label x:Name="status" FontSize="16" Foreground="White" HorizontalAlignment="Center">Status</Label>
        </Border>
        <Button x:Name="connect"  Click="connect_Click">Connect</Button>
        <Button x:Name="disconnect"  Click="disconnect_Click">Disconnect</Button>
    </StackPanel>
</Window>
